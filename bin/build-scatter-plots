#!/usr/bin/env python



import MySQLdb
import numpy as np
import matplotlib.pyplot as plt

archiedb=MySQLdb.connect(host='localhost',user='root',passwd='bob123',db='archie')
cursor=archiedb.cursor()

## Hardcoded Level for now
cursor.execute("""SELECT `northing`,`easting`,`elevation` FROM `record` WHERE `level`='30' AND (`northing`>0 AND `easting`>0 AND `elevation`>0)""")

# Easting on the XY plot
x_xy = ();
# Northing on the XY plot
y_xy = ();

cords = cursor.fetchone()
while cords is not None:
	x_xy = x_xy + (cords[1],)
	y_xy = y_xy + (cords[0],)
	cords = cursor.fetchone()

print "X_XY",(x_xy)
print "Y_XY",(y_xy)
#N = 50
#x = np.random.rand(N)
#y = np.random.rand(N)
#colors = np.random.rand(N)
#area = np.pi * (15 * np.random.rand(N))**2 # 0 to 15 point radiuses

plt.scatter(x_xy, y_xy,marker='x')
plt.show()

